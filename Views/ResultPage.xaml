<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="shephjl_WellnessApp.Views.ResultPage"
    Title="Wellness Result">

    <Grid Padding="20" RowSpacing="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <Frame
            Grid.Row="0"
            BackgroundColor="#F5F5F5"
            CornerRadius="15"
            Padding="20"
            HasShadow="True"
            VerticalOptions="Center">
            <Grid RowSpacing="15">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="Auto" />
                </Grid.RowDefinitions>

                <Grid Grid.Row="0" RowSpacing="5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <Label
                        Grid.Row="0"
                        Text="Your Wellness Score"
                        FontSize="18"
                        HorizontalOptions="Center" />
                    <Label
                        Grid.Row="1"
                        Text="{Binding WellnessScore}"
                        FontSize="56"
                        FontAttributes="Bold"
                        HorizontalOptions="Center"
                        TextColor="{Binding StatusColor}" />
                </Grid>

                <Frame
                    Grid.Row="1"
                    BackgroundColor="{Binding StatusColor}"
                    CornerRadius="10"
                    Padding="15,10"
                    HasShadow="False">
                    <Label
                        Text="{Binding StatusDisplay}"
                        FontSize="22"
                        FontAttributes="Bold"
                        TextColor="White"
                        HorizontalOptions="Center" />
                </Frame>
            </Grid>
        </Frame>

        <Button
            Grid.Row="1"
            Text="View Recommendations"
            FontSize="18"
            HeightRequest="50"
            Clicked="OnRecommendationsClicked"
            BackgroundColor="#4CAF50"
            TextColor="White"
            CornerRadius="10" />

        <Button
            Grid.Row="2"
            Text="Back to Inputs"
            FontSize="18"
            HeightRequest="50"
            Clicked="OnBackClicked"
            BackgroundColor="#757575"
            TextColor="White"
            CornerRadius="10" />
    </Grid>
</ContentPage>